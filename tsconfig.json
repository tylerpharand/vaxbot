{
   "compilerOptions": {
      "rootDir": "src",
      "outDir": "build",
      "lib": [
         "es2018",
         "ES5",
         "dom"
      ],
      "target": "ESNext",
      "moduleResolution": "node",
      "module": "commonjs",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true
   },
   "exclude": [
      "node_modules",
      "build"
   ]
}
